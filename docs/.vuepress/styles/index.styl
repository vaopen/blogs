// 鼠标指针
body
  cursor: url('/pointer/default.cur'), auto;
a, button, #goTop, .jump
  cursor: url('/pointer/link.cur'), auto;

p
  a
    color: #2196f3 !important;

// 首页标题
.home-blog
  .hero
    h1, .description, .action, .huawei
      color #000!important
      text-shadow 2px 2px 1px #888

// 页面去背景
.page
  background var(--background-color)
  background #fff

// 评论
.vssue
  border-radius: $borderRadius
  background rgba(0, 0, 0, 0.05)
  .vssue-header
  .vssue-body
    .vssue-new-comment
      .vssue-comment-avatar
        img
          border-radius: $borderRadius
          box-shadow: $boxShadow
      .vssue-new-comment-body
        box-shadow: $boxShadow
        background: #f6f8fa
        .vssue-new-comment-input
          border-radius: $borderRadius
    .vssue-comments
      .vssue-comment
        .vssue-comment-avatar
          img
            border-radius: $borderRadius
            box-shadow: $boxShadow
        .vssue-comment-body
          box-shadow: $boxShadow
          .vssue-comment-header
            background: #f0f2f4
          .vssue-comment-main
            background: #f6f8fa
          .vssue-comment-footer
            background: #f0f2f4

// 时间轴
.timeline-wrapper
  .year
    background var(--background-color)
    background #fff
  .year-wrapper
    background var(--background-color)
    background #fff

// 隐藏无用调色板与全屏
.reco-color
  display none
.screenfull
  display none

.navbar
  background-image: linear-gradient(to right , #7A88FF, #7AFFAF) !important;
.navbar .links
  background: transparent !important;
.navbar .logo
  border-radius: 50%;
  width: auto !important;
.home-blog .home-blog-wrapper .info-wrapper .personal-img
  border-radius: 50%;
.bgprimary
  background: #3eaf7c !important;
.pagation .pagation-list span.jump
  color: #476582;
.pagation .pagation-list span.jumpinp input
  border: 1px solid #deeffd !important;

img
  width: 100%;

.blog-list
  width: 100%
.content__default:not(.custom) img
  width: auto;
